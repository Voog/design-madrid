:root {
  /* VoogStyle
     "pathI18n": ["footer"],
     "titleI18n": "background_color",
     "editor": "colorPicker",
     "scope": "global"
  */
  --footer-background-color: white;
  /* VoogStyle
     "pathI18n": ["footer", "text"],
     "titleI18n": "alignment",
     "editor": "listPicker",
     "list": {{ base_alignment_horizontal_set }},
     "scope": "global"
  */
  --footer-alignment: center;
  /* VoogStyle
     "pathI18n": ["footer", "text"],
     "titleI18n": "line_height",
     "editor": "rangePicker",
     "min": 0.8,
     "max": 3,
     "step": 0.1,
     "unit": "em",
     "scope": "global"
  */
  --footer-line-height: 1.45 #em;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "size",
    "type": "button",
    "editor": "rangePicker",
    "min": 8,
    "max": 80,
    "unit": "px",
    "scope": "global",
    "featured": true
  */
  --footer-font-size: 10px;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "font_weight",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "600",
      "off": "400"
    },
    "icon": "bold",
    "scope": "global"
  */
  --footer-font-weight: 400;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "font_style",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "italic",
      "off": "normal"
    },
    "icon": "italic",
    "scope": "global"
  */
  --footer-font-style: normal;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "text_decoration",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "underline",
      "off": "none"
    },
    "icon": "underline",
    "scope": "global"
  */
  --footer-text-decoration: none;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "text_transform",
    "type": "button",
    "editor": "toggleIcon",
    "states": {
      "on": "uppercase",
      "off": "none"
    },
    "icon": "uppercase",
    "scope": "global"
  */
  --footer-text-transform: none;
  /* VoogStyle
    "pathI18n": ["footer", "text"],
    "titleI18n": "color",
    "type": "button",
    "editor": "colorPicker",
    "scope": "global",
    "featured": true
  */
  --footer-text-color: #333;
}
